@page
@model StudyManagementASP.Pages.AllModuleModel



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Module List </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Module" class="btn btn-primary align-content-lg-end justify-content-end" >
                <i class="fas fa-plus"></i> &nbsp; Create New Module
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.ModuleList.Count > 0)
    {
        <table class="table table-bordered table-striped w-auto" style="width:auto">
            <thead>
                <tr>
                    <th>
                        Module Code
                    </th>
                    <th>
                        Module Name
                    </th>
                    <th>
                        Credits
                    </th>
                    <th>
                        Class Hours per week
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        Semester Week
                    </th>
                    <th>
                        Date Studied
                    </th>
                    <th>
                        Hours Worked
                    </th>
                    <th>
                        Self Study Hours Required
                    </th>
                    <th>
                        Self Study Hours Remain
                    </th>
                    <th>
                        Weeks
                    </th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.ModuleList)
                {
                    <tr>
                        <td width="10%">@obj.ModuleCode</td>
                        <td width="30%">@obj.ModuleName</td>
                        <td width="10%">@obj.Credits</td>
                        <td width="30%">@obj.ClassHrsPW</td>
                        <td width="15%">@obj.StartDate</td>
                        <td width="10%">@obj.SemesterWeek</td>
                        <td width="15%">@obj.DateStudied</td>
                        <td width="10%">@obj.HoursWorked</td>
                        <td width="80%">@obj.SelfStudyHrsReq</td>
                        <td width="80%">@obj.SelfStudyHrsRem</td>
                        <td width="10%">@obj.Weeks</td>
                        @*Next going to add buttons for CRUD operations*@
                        <td class="text-center w-auto">
                            <div class="w-auto btn-group" role="group">
                                <a asp-page="./EditModule" asp-route-id="@obj.Id" class="btn btn-primary m-2">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a onclick="return confirm
                    ('Are you sure you want to delete this Module?');"
                                   asp-page-handler="Delete" asp-route-id="@obj.Id" class="btn btn-danger m-2">
                                    <i class="fas fa-trash"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Module exits. </p>
    }

</div>


